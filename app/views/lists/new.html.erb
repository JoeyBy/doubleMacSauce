<h1>New List</h1>

<%= form_for([@user, @list]) do |f| %>
  <% if @list.errors.any? %>
    <div>
      <%= pluralize(@list.errors.count, "error") %> prevented the review from being saved:
      <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label "Title" %><br>
    <%= f.text_area "title" %>
  </div>
  <div>
    <%= f.label "Due Date" %><br>
    <%= f.date_field "due_date" %>
  </div>
  <div><%= f.submit "Submit" %></div>
<% end %>